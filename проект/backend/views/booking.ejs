<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Management</title>
    <!-- Підключення Bootstrap для стилізації -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Підключення власних стилів -->
    <link rel="stylesheet" href="/public/main.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Booking Management</h1>

        <h3>Add New Booking</h3>
        <form action="/api/booking/create" method="POST" class="mb-5">
            <div class="mb-3">
                <label for="IdBooking" class="form-label">Booking ID</label>
                <input type="text" class="form-control" id="IdBooking" name="IdBooking" required>
            </div>
            <div class="mb-3">
                <label for="IdClient" class="form-label">Client ID</label>
                <input type="text" class="form-control" id="IdClient" name="IdClient" required>
            </div>
            <div class="mb-3">
                <label for="IdWarehouse" class="form-label">Warehouse ID</label>
                <input type="text" class="form-control" id="IdWarehouse" name="IdWarehouse" required>
            </div>
            <div class="mb-3">
                <label for="StartDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="StartDate" name="StartDate" required>
            </div>
            <div class="mb-3">
                <label for="EndDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="EndDate" name="EndDate" required>
            </div>
            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" step="5" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Booking</button>
        </form>

        <h3>Booking List</h3>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Client ID</th>
                    <th>Warehouse ID</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% booking.forEach(function(booking) { %>
                    <tr>
                        <td><%= booking.IdBooking %></td>
                        <td><%= booking.IdClient %></td>
                        <td><%= booking.IdWarehouse %></td>
                        <td><%= booking.StartDate %></td>
                        <td><%= booking.EndDate %></td>
                        <td><%= booking.Prise %></td>
                        <td>
                            <a href="/api/booking/<%= booking.IdBooking %>" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                        <td>
                            <a href="/api/booking/delete/<%= booking.IdBooking %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this booking?')">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <a class="btn btn-outline-secondary" href="/" style="margin-left: 50px;">Back to Home</a>
    </div>
</body>
</html>